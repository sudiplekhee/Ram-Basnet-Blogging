<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Blog Navbar</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex-shrink-0 text-2xl font-bold text-purple-600">
          MyBlog
        </div>

        <!-- Desktop Menu -->
        <div class="hidden md:flex space-x-6 items-center">
          <a href="/" class="text-gray-700 hover:text-purple-600">Home</a>
          <a href="/addblog" class="text-gray-700 hover:text-purple-600"> Add Blog</a>
          <a href="/about" class="text-gray-700 hover:text-purple-600">About</a>
          <a href="/contact" class="text-gray-700 hover:text-purple-600">Contact</a>
        </div>

        <!-- Buttons -->
        <div class="hidden md:flex space-x-4">
          <a href="/login" class="px-4 py-2 border border-purple-600 text-purple-600 rounded-lg hover:bg-purple-50">Login</a>
          <a href="/register" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700">Sign Up</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden flex items-center">
          <button id="menu-button" class="text-gray-700 focus:outline-none">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
      <a href="/" class="block py-2 text-gray-700 hover:text-purple-600">Home</a>
      <a href="/addblog" class="block py-2 text-gray-700 hover:text-purple-600">Add Blog</a>
      <a href="/about" class="block py-2 text-gray-700 hover:text-purple-600">About</a>
      <a href="/contact" class="block py-2 text-gray-700 hover:text-purple-600">Contact</a>
      <a href="/login" class="block py-2 text-purple-600">Login</a>
      <a href="/register" class="block py-2 text-purple-600">Sign Up</a>
    </div>
  </nav>

  <script>
    // Mobile menu toggle
    document.getElementById('menu-button').addEventListener('click', function () {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  </script>

</body>
</html>
